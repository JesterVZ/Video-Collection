<Window x:Class="VideoCollection.View.AddYoutubeLinkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoCollection.View"
        mc:Ignorable="d"
        Title="AddYoutubeLinkWindow" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16">Paste YouTube Link</TextBlock>
        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox Name="LinkTextBox" Grid.Row="2" Width="200" Height="30"></TextBox>
                <Button Height="30" Margin="30, 0, 0, 0" Click="Button_Click">Add video</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

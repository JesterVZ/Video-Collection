<UserControl x:Class="VideoCollection.View.ContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VideoCollection.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >
    <Grid>
        <Grid HorizontalAlignment="Left" Width="130">
            <ListView Name="DataListView" SelectionChanged="DataListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding VideoName}"></Label>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <ScrollViewer Margin="136,0,0,0">
            <Grid>
                <Grid VerticalAlignment="Top">
                    <MediaElement Source="{Binding SourcePath}" Name="VideoOutput" Height="300" LoadedBehavior="Manual" MediaOpened="VideoOutput_MediaOpened" MouseDown="VideoOutput_MouseDown"></MediaElement>
                </Grid>
                <Grid VerticalAlignment="Bottom" Height="70" Margin="0, 0, 0, 0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Slider Margin="0,10,0,0" Name="TimeBarSlider" ValueChanged="TimeBarSlider_ValueChanged"></Slider>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="42*"/>
                            <ColumnDefinition Width="179*"/>
                            <ColumnDefinition Width="221*"/>
                            <ColumnDefinition Width="221*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="VideoControlButton" Grid.Column="2" VerticalAlignment="Top" Height="30" Width="100" Click="Button_Click">Play</Button>
                        <Slider Grid.Column="3" Value="10" Name="VolumeSlider" ValueChanged="VolumeSlider_ValueChanged"></Slider>
                        <Label Grid.Column="0" Content="{Binding Path=SourcePath}" Grid.ColumnSpan="2"></Label>
                    </Grid>
                </Grid>
            </Grid>

        </ScrollViewer>

    </Grid>
</UserControl>

<Window x:Class="VideoCollection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoCollection"
        xmlns:viewmodel ="clr-namespace:VideoCollection.ViewModel"
        xmlns:view ="clr-namespace:VideoCollection.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Name="contentViewTemplate" DataType="{x:Type viewmodel:ContentViewModel}">
            <view:ContentView DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListView Grid.Column="0">
            <ListViewItem HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <Button Click="Button_Click">Добавить видео</Button>
                </StackPanel>
            </ListViewItem>
        </ListView>
        <ContentControl Grid.Column="1" Grid.ColumnSpan="3" Content="{Binding}"/>
    </Grid>
</Window>

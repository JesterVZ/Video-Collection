<Window x:Class="VideoCollection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoCollection"
        xmlns:viewmodel ="clr-namespace:VideoCollection.ViewModel"
        xmlns:view ="clr-namespace:VideoCollection.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Name="contentViewTemplate" DataType="{x:Type viewmodel:ContentViewModel}">
            <view:ContentView DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid VerticalAlignment="Top" Height="30">
            <StackPanel Orientation="Horizontal">
                <Button HorizontalAlignment="Left" Width="50" Click="Button_Click">Add</Button>
                <Button HorizontalAlignment="Left" Margin="10, 0, 0, 0" Width="50">Edit</Button>
            </StackPanel>
        </Grid>
        <Grid Margin="0, 30, 0, 0">
            <ContentControl Grid.Row="1" Grid.RowSpan="7" Content="{Binding}"/>
        </Grid>
    </Grid>
    
</Window>
